.container-fluid
  %form{:method => "post", :action => '/print'}
    .input-group
      %input.form-control{type: "text", name: 'data', placeholder: "ID, name"}
      %span.input-group-btn
        %button.btn.btn-primary{:type => "submit"}
          %span.glyphicon.glyphicon-print
    .input-group
      %select{:name => 'printer'}
        - Tepra.printers.each do |v|
          %option{:name => v, :value => v}="#{v}"
      %select{:name => 'template'}
        - Tepra.templates.each do |v|
          %option{:name => v, :value => v}="#{v}"
